<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">Admin Dashboard</h1>

  <!-- Stats Summary -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-600 mb-2">Total Posts</h2>
      <p class="text-4xl font-bold text-blue-600"><%= @total_posts %></p>
      <%= link_to "Manage Posts", main_app.posts_path, class: "text-blue-600 hover:underline mt-2 inline-block" %>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-600 mb-2">Total Comments</h2>
      <p class="text-4xl font-bold text-green-600"><%= @total_comments %></p>
    </div>
  </div>

  <!-- Recent Posts -->
  <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
    <h2 class="text-2xl font-bold mb-4">Recent Posts</h2>
    <table class="w-full">
      <thead>
        <tr class="border-b">
          <th class="text-left py-2">Title</th>
          <th class="text-left py-2">Published</th>
          <th class="text-left py-2">Created</th>
          <th class="text-right py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr class="border-b">
            <td class="py-2"><%= link_to post.title, main_app.post_path(post), class: "text-blue-600 hover:underline" %></td>
            <td class="py-2">
              <span class="<%= post.published ? 'text-green-600' : 'text-gray-400' %>">
                <%= post.published ? '✓' : '○' %>
              </span>
            </td>
            <td class="py-2"><%= post.created_at.strftime("%B %d, %Y") %></td>
            <td class="text-right py-2">
              <%= link_to "Edit", main_app.edit_post_path(post), class: "text-blue-600 hover:underline mr-2" %>
              <%= button_to "Delete", main_app.post_path(post), method: :delete,
                  data: { turbo_confirm: "Delete this post?" },
                  class: "text-red-600 hover:underline inline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Recent Comments -->
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-2xl font-bold mb-4">Recent Comments</h2>
    <table class="w-full">
      <thead>
        <tr class="border-b">
          <th class="text-left py-2">Author</th>
          <th class="text-left py-2">Comment</th>
          <th class="text-left py-2">Post</th>
          <th class="text-right py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr class="border-b">
            <td class="py-2"><%= comment.author %></td>
            <td class="py-2"><%= truncate(comment.body, length: 50) %></td>
            <td class="py-2"><%= link_to comment.post.title, main_app.post_path(comment.post), class: "text-blue-600 hover:underline" %></td>
            <td class="text-right py-2">
              <%= button_to "Delete", comments.comment_path(comment), method: :delete,
                  data: { turbo_confirm: "Delete this comment?" },
                  class: "text-red-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
