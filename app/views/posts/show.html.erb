<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-8">
    <%= link_to "← Back to Posts", posts_path, class: "text-blue-600 hover:underline" %>
  </div>

  <article class="bg-white rounded-lg shadow-sm p-8">
    <div class="mb-6">
      <h1 class="text-4xl font-bold mb-2"><%= @post.title %></h1>
      <div class="flex gap-4 text-sm text-gray-500">
        <span><%= @post.created_at.strftime("%B %d, %Y") %></span>
        <span class="<%= @post.published ? 'text-green-600' : 'text-gray-400' %>">
          <%= @post.published ? '✓ Published' : '○ Draft' %>
        </span>
      </div>
    </div>

    <div class="prose max-w-none mb-8">
      <%= simple_format(@post.body) %>
    </div>

    <% if user_signed_in? %>
      <div class="flex gap-4 pt-6 border-t">
        <%= link_to "Edit", edit_post_path(@post), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        <%= button_to "Delete", post_path(@post), method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
      </div>
    <% end %>
  </article>

  <!-- Comments Section -->
  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-6">Comments</h2>

    <!-- New Comment Form -->
    <% if user_signed_in? %>
      <div class="bg-gray-50 rounded-lg p-6 mb-8">
        <%= form_with model: Comments::Comment.new, url: comments.comments_path(post_id: @post.id), class: "space-y-4" do |f| %>
          <div>
            <%= f.label :author, class: "block text-sm font-medium mb-1" %>
            <%= f.text_field :author, class: "w-full px-3 py-2 border rounded" %>
          </div>

          <div>
            <%= f.label :body, "Comment", class: "block text-sm font-medium mb-1" %>
            <%= f.text_area :body, rows: 4, class: "w-full px-3 py-2 border rounded" %>
          </div>

          <%= f.submit "Add Comment", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg p-6 mb-8 text-center">
        <p class="text-gray-600">
          Please <%= link_to "sign in", new_user_session_path, class: "text-blue-600 hover:underline" %> to leave a comment.
        </p>
      </div>
    <% end %>

    <!-- Comments List -->
    <div class="space-y-4">
      <% @post.comments.order(created_at: :desc).each do |comment| %>
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex justify-between items-start mb-2">
            <span class="font-semibold"><%= comment.author %></span>
            <span class="text-sm text-gray-500"><%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </div>
          <p class="text-gray-700 mb-4"><%= simple_format(comment.body) %></p>
          <% if user_signed_in? %>
            <%= button_to "Delete", comments.comment_path(comment), method: :delete,
                data: { turbo_confirm: "Delete this comment?" },
                class: "text-red-600 text-sm hover:underline" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>