<%= form_with(model: post, class: "space-y-4") do |form| %>
  <div>
    <%= form.label :title, class: "block text-sm font-medium mb-2" %>
    <%= form.text_field :title, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div data-controller="character-counter" data-character-counter-max-value="500">
    <%= form.label :body, class: "block text-sm font-medium mb-2" %>
    <%= form.text_area :body,
      rows: 6,
      class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500",
      data: {
        character_counter_target: 'input',
        action: 'input->character-counter#update'
      }
    %>
    <div class="text-sm text-gray-600 mt-1" data-character-counter-target="counter"></div>
  </div>

  <div class="flex items-center">
    <%= form.check_box :published, class: "w-4 h-4 text-blue-600 rounded" %>
    <%= form.label :published, "Publish immediately", class: "ml-2 text-sm" %>
  </div>

  <div class="flex gap-4">
    <%= form.submit class: "bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600" %>
    <%= link_to "Cancel", posts_path, data: { turbo_frame: "_top" }, class: "bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400" %>
  </div>
<% end %>