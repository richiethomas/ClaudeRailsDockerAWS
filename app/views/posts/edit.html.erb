<div class="max-w-4xl mx-auto px-4 py-8">
  <%= turbo_frame_tag dom_id(@post) do %>
    <div class="border rounded-lg p-6 bg-white shadow-sm">
      <h2 class="text-xl font-semibold mb-4">Edit Post</h2>

      <%= form_with(model: @post, class: "space-y-4") do |form| %>
        <div>
          <%= form.label :title, class: "block text-sm font-medium mb-2" %>
          <%= form.text_field :title, class: "w-full px-4 py-2 border rounded-lg" %>
        </div>

        <div>
          <%= form.label :body, class: "block text-sm font-medium mb-2" %>
          <%= form.text_area :body, rows: 6, class: "w-full px-4 py-2 border rounded-lg" %>
        </div>

        <div class="flex items-center">
          <%= form.check_box :published, class: "w-4 h-4 text-blue-600 rounded" %>
          <%= form.label :published, "Published", class: "ml-2 text-sm" %>
        </div>

        <div class="flex gap-4">
          <%= form.submit "Update", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
          <%= link_to "Cancel", posts_path, data: { turbo_frame: "_top" }, class: "text-gray-600 hover:underline" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>